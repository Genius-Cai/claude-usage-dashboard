# Claude Usage Dashboard Backend Configuration
# Copy this file to .env and customize values as needed

# =============================================================================
# Data Source Configuration
# =============================================================================

# Path to Claude's usage data directory
# Default: ~/.claude/projects
CLAUDE_DATA_PATH=~/.claude/projects

# =============================================================================
# CORS Configuration
# =============================================================================

# Comma-separated list of allowed origins for CORS
# Include your frontend URL here
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8000"]

# =============================================================================
# Application Settings
# =============================================================================

# Enable debug mode (enables auto-reload, verbose logging)
DEBUG=false

# API route prefix
API_PREFIX=/api

# =============================================================================
# Session Configuration
# =============================================================================

# Rolling window duration in hours for session tracking
# Claude Code uses a 5-hour rolling window for rate limiting
SESSION_WINDOW_HOURS=5

# =============================================================================
# WebSocket Configuration
# =============================================================================

# Interval in seconds between WebSocket broadcasts
WEBSOCKET_BROADCAST_INTERVAL=10

# =============================================================================
# Logging Configuration
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
